{% extends "base.html.twig" %}

{% block title %}
	Projets
{% endblock %}

{% block headerTitle %}
	<h1>Projets</h1>
{% endblock %}

{% block activeProjet %}
	active
{% endblock %}

{% block body %}


	<div id="projects-container">
		{% for project in projects %}
			<article class="card-project">
				<a href="{{ path('app_one_project', {'id': project.id}) }}">
					<h2>{{ project.name }}</h2>
				</a>
				<div class="card-project-icons">
					<a href="{{ path('app_edit_project', {'id': project.id}) }}">
						<i class="fa-solid fa-pen"></i>
					</a>
					<a href="{{ path('app_archiving_project', {'id': project.id}) }}">
						<i class="fa-solid fa-trash"></i>
					</a>
				</div>
			</article>
		{% endfor %}
		<article class="card-project">
			<a href="{{ path('app_add_project') }}">
				<i class="fa-solid fa-circle-plus add-project-icon"></i>
				<h2>Ajouter un projet</h2>
			</a>
		</article>
	</div>


{% endblock %}
